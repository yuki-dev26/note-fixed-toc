{
    "manifest_version": 3,
    "name": "note Fixed ToC",
    "version": "1.0.0",
    "description": "note記事の目次を画面右下に固定表示します",
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://note.com/*/n/*"
            ],
            "js": [
                "main.js"
            ],
            "css": [
                "style.css"
            ]
        }
    ],
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    }
}